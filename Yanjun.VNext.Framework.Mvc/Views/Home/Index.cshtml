
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Extjs/resources/theme-classic-all.css" rel="stylesheet" />
    <link href="~/Extjs/ux/classic/resources/ux-all.css" rel="stylesheet" />

</head>
<body>

    <script type="text/javascript" src="~/Extjs/ext-all-debug.js"></script>
    <script src="~/Extjs/theme-classic.js"></script>
    <script src="~/Extjs/ux/ux.js"></script>

    <script type="text/javascript">
        Ext.Loader.setConfig({
            enable: true,
            paths: {
                "xf.core": "/xf",
                "xf": "/app",
                "xf.view": "/app/view",
                "xf.controller": "/app/controller",
                "xf.model": "/app/model",
            }
        });
    </script>

    <script type="text/javascript">

        Ext.onReady(function () {
            Ext.toast("欢迎使用EAP", "欢迎", "t");
            Ext.application("xf.core.Application");
        });

    </script>
    @Scripts.Render("~/xf")

    @Scripts.Render("~/app/model")

</body>
</html>
