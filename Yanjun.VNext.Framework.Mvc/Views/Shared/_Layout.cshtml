<!DOCTYPE html>
<html>
<head>

    <title>企业信息化软件系列</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="~/MiniUi/miniui/themes/default/miniui.css" rel="stylesheet" />
    <link href="~/MiniUi/miniui/themes/icons.css" rel="stylesheet" />
    <script src="~/MiniUi/jquery.min.js"></script>
    <script src="~/MiniUi/miniui/miniui.js"></script>
    <style type="text/css">
        html, html body {
            padding: 0;
            border: 0;
            margin: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            font-family: Verdana;
            font-size: 12px;
            line-height: 22px;
        }

        .header {
            background: url("") repeat-x 0 -1px;
        }

        body .header .topNav {
            position: absolute;
            right: 8px;
            top: 5px;
            font-size: 12px;
            line-height: 25px;
        }

        .header .topNav a {
            text-decoration: none;
            color: #222;
            font-weight: normal;
            font-size: 12px;
            line-height: 25px;
            margin-left: 3px;
            margin-right: 3px;
        }

            .header .topNav a:hover {
                text-decoration: underline;
                color: Blue;
            }
    </style>
</head>
<body>
    @RenderBody()

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
